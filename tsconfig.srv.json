{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      // "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "build"
    },
    "files": ["./server.ts"],
    "include": ["./*.ts"]
  }
    